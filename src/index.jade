doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content="initial-scale=1, maximum-scale=1, user-scalable=no, width=device-width")
    meta(http-equiv='Content-Security-Policy' content="default-src *; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline' 'unsafe-eval' http://localhost:35729")
    title Dustbin App

    each file in ['css/ionic.app', 'lib/ionic-material/dist/ionic.material.min', 'css/style']
      link(href=file+'.css' rel='stylesheet')

    // Ionic libs
    each file in [ 'ionic/js/ionic.bundle', 'ionic-material/dist/ionic.material.min']
      script(src='lib/'+file+'.js')

    // Cordova
    each file in [ 'lib/ngCordova/dist/ng-cordova.min', 'cordova']
      script(src=file+'.js')

    // Additional libs
    each file in [ 'underscore/underscore-min', 'moment/min/moment.min' ]
      script(src='lib/'+file+'.js')

    // Main app js here
    each file in ['app', 'constants']
      script(src='js/'+file+'.js')

  body(ng-app='manoj')

    //
      ion-pane
        ion-header-bar.bar-positive
          h1.title Dustbin App

        ion-nav-view
    //
      ion-side-menus

        ion-side-menu(side='left')
          ng-include(src='"templates/side.html"')

        //
          Notes: We need to use ion-nav-header and all of that
        ion-side-menu-content
          ion-header-bar.bar-positive
            .primary-buttons
              button.button.button-clear.icon.ion-navicon(menu-toggle)
            h1.title Dustbin App
          ion-nav-view              // Main ion-nav-view
    ion-slide-box(show-pager='false' does-continue='true')
      ion-slide
        div
          h1 Box 1
      ion-slide
        div
          h1 Box 2

